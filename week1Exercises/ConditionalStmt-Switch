
function SCD(number)
{
    
    switch(true)
    {
        case number > 0:
            console.log("the number is positive")
            break;

        case number < 0 :
            console.log("the number is negative")
            break;

        case number == 0:
            console.log("the number is zero")
            break;


    }
}
console.log(SCD(10))
console.log(SCD(-10))
console.log(SCD(0))
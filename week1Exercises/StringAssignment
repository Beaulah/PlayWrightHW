//Example-2//
function findlastwordlegth(s)
{
    if(s.length==0)
    {
        return 0;
    }
    else{
        const words = s.trim().split(" ")
        const lengthoflastword = words[words.length-1].length
        return lengthoflastword

    }
}
console.log(findlastwordlegth(" fly me to the moon "))
console.log(findlastwordlegth("hello world"))